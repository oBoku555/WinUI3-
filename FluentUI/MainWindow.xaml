<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FluentUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="FluentUI">
    
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox>    </TextBox>
            <Button x:Name="addButton" Click="btn1_Click">1</Button>
            <Button x:Name="addButton" Click="btn2_Click">2</Button>
            <Button x:Name="addButton" Click="btn3_Click">3</Button>
            <Button x:Name="addButton" Click="btn4_Click">4</Button>
            <Button x:Name="addButton" Click="btn5_Click">5</Button>
            <Button x:Name="addButton" Click="btn6_Click">6</Button>
            <Button x:Name="addButton" Click="btn7_Click">7</Button>
            <Button x:Name="addButton" Click="btn8_Click">8</Button>
            <Button x:Name="addButton" Click="btn9_Click">9</Button>
            <Button x:Name="addButton" Click="btn0_Click">0</Button>

            <Button x:Name="addButton" Click="btnAdd_Click">+</Button>
            <Button x:Name="minusButton" Click="btnMinus_Click">-</Button>
            <Button x:Name="plusButton" Click="btnPlus_Click">*</Button>
            <Button x:Name="divideButton" Click="btnDivide_Click">/</Button>
        </StackPanel>
    </Grid>
</Window>
